<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Fitness Page</title>
    <!-- Custom styles -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }
        .navbar-brand {
            color: #007bff;
            font-size: 24px;
            font-weight: bold;
        }
        .navbar-nav .nav-link {
            color: #333;
            font-weight: bold;
        }
        .navbar-nav .nav-link:hover {
            color: #007bff;
        }
        .container {
            max-width: 800px; /* Adjusted max-width for the carousel */
            margin: 40px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h1 {
            text-align: center;
            color: #333;
        }
        p {
            text-align: center;
        }
    </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/main">Main Page</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <!-- HealthCare link -->
                <li class="nav-item">
                    <a class="nav-link" href="/fitness">Fitness</a>
                </li>
                <% if (user.role === 'admin') { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Admin Page</a>
                    </li>
                <% } %>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

    <div class="container">
        <h1>Welcome to Fitness Page</h1>
        <p>Check out these beginner biceps workouts:</p>
        <div id="workoutResults"></div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        const axios = require('axios');

        const options = {
          method: 'GET',
          url: 'https://work-out-api1.p.rapidapi.com/search',
          params: {
            Muscles: 'biceps',
            Intensity_Level: 'Beginner'
          },
          headers: {
            'X-RapidAPI-Key': 'b5892546f5mshcc684049a630c7ap1030c0jsnbb47f7c79370',
            'X-RapidAPI-Host': 'work-out-api1.p.rapidapi.com'
          }
        };

        async function fetchData() {
            try {
                const response = await axios.request(options);
                const workoutResults = document.getElementById('workoutResults');
                workoutResults.innerHTML = JSON.stringify(response.data);
            } catch (error) {
                console.error(error);
            }
        }

        fetchData();
    </script>
</body>
</html>